<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context=".homeSegment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="63dp"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/app_logo" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/tv_round_corner"
            android:backgroundTint="#20000000"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:text="ABOUT"
            android:textSize="26dp"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/catPenang"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="430dp"
            android:background="#FFFFFF"
            android:drawableTint="#FFFFFF"
            android:fontFamily="@font/candal"
            android:text="PENANG"
            android:textColor="@color/light_yellow"
            app:srcCompat="@drawable/about_penang" />

        <TextView
            android:id="@+id/catPenang_text"
            android:layout_width="329dp"
            android:layout_height="61dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="450dp"
            android:clickable="true"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:text="PENANG"
            android:textSize="26dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="10.5"
            android:shadowDy="10.3"
            android:shadowRadius="25.6"
            android:textAllCaps="true" />

        <ImageButton
            android:id="@+id/catFood"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="545dp"
            android:background="#FFFFFF"
            android:drawableTint="#FFFFFF"
            android:fontFamily="@font/candal"
            android:text="FOOD"
            android:textColor="@color/light_yellow"
            app:srcCompat="@drawable/food_category" />

        <TextView
            android:id="@+id/catFood_text"
            android:layout_width="329dp"
            android:layout_height="61dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="565dp"
            android:clickable="true"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:text="FOOD"
            android:textSize="26dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="10.5"
            android:shadowDy="10.3"
            android:shadowRadius="25.6"
            android:textAllCaps="true" />

        <ImageButton
            android:id="@+id/catPlaces"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="660dp"
            android:background="#FFFFFF"
            android:drawableTint="#FFFFFF"
            android:fontFamily="@font/candal"
            android:text="PLACES"
            android:textColor="@color/light_yellow"
            app:srcCompat="@drawable/places_category" />

        <TextView
            android:id="@+id/catPlaces_text"
            android:layout_width="329dp"
            android:layout_height="61dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="680dp"
            android:clickable="true"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:text="PLACES"
            android:textSize="26dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="10.5"
            android:shadowDy="10.3"
            android:shadowRadius="25.6"
            android:textAllCaps="true" />
    </RelativeLayout>
</ScrollView>