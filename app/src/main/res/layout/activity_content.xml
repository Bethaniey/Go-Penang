<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    android:orientation="vertical"
    tools:context=".content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pageCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-190dp"
            android:layout_toLeftOf="@id/pageSlash"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/pageSlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-190dp"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:text="/"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/pageEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:fontFamily="@font/candal"
            android:gravity="center"
            android:text="10"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="540dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="560dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivContent"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:layout_marginStart="24dp" />

            <TextView
                android:id="@+id/tvTravelName"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/candal"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvTravelDescription"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/candal"
                android:text="Description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvOperatingHour"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/candal"
                android:text="OperatingHour"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/candal"
                android:text="Address"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="137dp"
                android:layout_marginTop="15dp"
                android:text="Google Map" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="205dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00FFFFFF"
            android:tint="#090000"
            app:srcCompat="@android:drawable/ic_media_rew"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="656dp" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00FFFFFF"
            android:tint="#000000"
            app:srcCompat="@android:drawable/ic_media_ff"
            tools:layout_editor_absoluteX="321dp"
            tools:layout_editor_absoluteY="654dp" />
    </LinearLayout>
</LinearLayout>